{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "Secret": "YourSuperSecretKeyWithAtLeast32Characters",
    "Issuer": "CurrencyConverterAPI",
    "Audience": "CurrencyConverterAPIClients",
    "ExpirationInMinutes": 60
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*:/api/v1/exchangerates/latest",
        "Period": "1m",
        "Limit": 30
      },
      {
        "Endpoint": "*:/api/v1/currencyconversion/convert",
        "Period": "1m",
        "Limit": 20
      },
      {
        "Endpoint": "*:/api/v1/exchangerates/historical",
        "Period": "1m",
        "Limit": 10
      },
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 60
      }
    ]
  },
  "ApiOptions": {
    "CacheExpirationMinutes": 30
  },
  "DefaultCurrencyProvider": "Frankfurter"
}
